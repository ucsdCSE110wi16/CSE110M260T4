<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ucsd.cse110.recipeforsuccess.MainFragment"
    android:background="#FFAAEFDF"
    android:windowBackground="@color/colorAccent" >

    <LinearLayout
        android:id="@+id/recipe_search_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/chef_logo"
        android:layout_below="@+id/recipe_search_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Looking for a Recipe?"
        android:textSize="80px"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:singleLine="true" />

    <EditText
        android:layout_width="600px"
        android:layout_height="125px"
        android:id="@+id/editText"
        android:inputType="text"
        android:hint=" Enter name of recipe"
        android:background="#d9d9d9"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button"
        android:clickable="true"
        android:contextClickable="false"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="36dp"
        android:background="#FFD64B" />

</RelativeLayout>
